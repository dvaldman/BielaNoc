<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        
        >
	
        <RelativeLayout 
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="@dimen/artists_item_height"
            android:paddingRight="@dimen/artists_list_divider_width"
            android:layout_weight="1"
            >
            
            <ProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                />
                    
            <ImageView 
                android:id="@+id/artist1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"/>
            
            <sk.nuit.blanche.customview.CustomTextView
                android:layout_alignParentTop="true"
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:padding="@dimen/artists_caption_label_padding"
                android:layout_height="wrap_content"
                style="@style/custom_font_text_artist_layout"
	        />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/right"
            android:paddingLeft="@dimen/artists_list_divider_width"
            android:layout_width="0dp"
            android:layout_height="@dimen/artists_item_height"
            android:layout_weight="1">
            
            <ProgressBar
                android:id="@+id/progressbar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                />
            
            <ImageView 
                android:id="@+id/artist2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"/>
            
            <sk.nuit.blanche.customview.CustomTextView
                android:layout_alignParentBottom="true"
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:padding="@dimen/artists_caption_label_padding"
                android:layout_height="wrap_content"
                style="@style/custom_font_text_artist_layout"
	        />
            
        </RelativeLayout>
        
	    
</LinearLayout>

